# .editorconfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation for C, C++, and header files
[*.{h,hh,hpp,c,cpp,cc,cxx}]
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true

# Tab indentation (no size specified) for Makefiles
[Makefile]
indent_style = tab

# Indentation and formatting for Qt UI files
[*.ui]
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = false

# Indentation and formatting for Qt resource files
[*.qrc]
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = false

# YAML files (e.g., Qt project files)
[*.{yaml,yml}]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

# JSON files (e.g., Qt configuration files)
[*.json]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

# Markdown files
[*.md]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false
max_line_length = off
